nm=(input().split())
n=int(nm[0])
m=int(nm[1])
arr=list(map(int,input().split()))
happiness=0 #count is used #count=0

a=set(map(int,input().split()))
b=set(map(int,input().split()))
for i in arr:  #consider arr=[input]
    if i in a:
       happiness+=1
   #happiness=happiness+1
    if i in b:    
        happiness-=1 
    #happiness=happiness-1 
print(happiness)


#consider arr=[input]
